#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i = 1, a = 1, x = 1;
    printf("<<FATORIAL>>\n\n");
    while(x <= 15) {
        i = x;
        while(i >= 1) {
            a = a * i;
            i--;
        }
        printf("%d!: %d\n", x, a);
        x++;
        a = 1;
    }
    return 0;
}

//Se o sistema for de 32 bits, o computador não conseguirá mostrar certos valores pois irá ultrapassar o maior número que um sistema desses consegue mostrar
