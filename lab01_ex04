#include <stdio.h>
#include <stdlib.h>

int main()
{
    float peso, altura, imc;
    
    printf("Informe o peso da pessoa: ");
    scanf("%f", &peso);
    printf("Informe a altura pessoa: ");
    scanf("%f", &altura);
    
    imc = peso/(altura*altura);
    
        if(imc < 18.5)
            printf("Magreza\n");
        if(imc >= 18.5 && imc < 24.9)
            printf("Saudavel\n");
        if(imc >= 24.9 && imc < 29.9)
            printf("sobrepeso\n");
        if(imc >= 29.9)
            printf("Obesidade\n");
    
    return 0;
}
