#include <stdio.h>
#include <stdlib.h>
int main()
{
    char nome[20];
    int i = 0, a;
    printf("<<Vetor de char>>\n\n");
    printf("Digite o nome: ");
    scanf("%s", nome);
    
    while(nome[i] != '\0') {
        a = atoi(nome[i]);
        nome[i] = nome[i] + 32;
    }
    
    printf("O nome eh: %s", nome);
    return 0;
}
